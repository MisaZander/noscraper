{{#each articles}}
<div class="card border-dark mb-1">
  <div class="card-body">
    <h3>{{ headline }}</h3>
    <p class="lead">{{ summary }}</p>
    <span class="text-muted">{{ prettyDate }}</span>
    <a class="card-link ml-3" href="https://www.nhl.com{{url}}" target="_blank">Read More</a>
    <a class="card-link" href="/article/{{ contentid }}" target="_blank">Comments({{ comments.length }})</a>
  </div>
</div>
{{/each}}
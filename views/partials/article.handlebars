{{#each articles}}
<div class="card">
  <div class="card-body">
    <h3>{{ headline }}</h3>
    <p class="lead">{{ summary }}</p>
    <span class="text-muted">{{ publicationDate }}</span>
    <a class="card-link" href="https://www.nhl.com{{url}}" target="_blank">Read More</a>
    <a class="card-link" href="/article/{{ contentId }}" target="_blank">Comments({{comments.length}})</a>
  </div>
</div>
{{/each}}